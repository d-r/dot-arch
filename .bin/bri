#!/usr/bin/env nu

const HINT = "string:x-canonical-private-synchronous:sys-notify"

# Brightness
def main []: nothing -> int {
    main get
}

# Get the current brightness in percent
def "main get" []: nothing -> int {
    let v = brightnessctl get | into float
    # Convert 0..255 to percentage
    ($v / 255) * 100 | math round
}

# Decrease brightness
def "main dec" [] {
    brightnessctl set 5%-
    notify
}

# Increase brightness
def "main inc" [] {
    brightnessctl set 5%+
    notify
}

def notify [] {
    notify-send --expire-time=1000 -h $HINT $"Brightness: (main get)%"
}
