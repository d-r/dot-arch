#!/usr/bin/env nu

use ~/dot/nu/all.nu *

const $FONT = "font=JetBrains Mono:size=14"

# Run `tui ...` inside of a terminal.
def main [$cmd: string, ...$args] {
    let $id = $"tui.($cmd)"
    let $w = (wm window-with-app-id $id)
    if ($w | is-empty) {
        footclient -a $id -o $FONT -- tui $cmd ...$args
   } else {
        wm focus-window $w.id
    }
}
