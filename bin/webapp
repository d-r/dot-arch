#!/usr/bin/env nu

# Open a URL in Chromium's app mode
def main [$name: string, $url: string] {
    let $id = $"web.($name)"
    let $state_dir = ($env.XDG_STATE_HOME)
    let $data_dir = $"($state_dir)/webapp"
    mkdir $data_dir
    chromium --user-data-dir=($data_dir) --app=($url) --class=($id)
}
