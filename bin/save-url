#!/usr/bin/env nu

use ~/dot/nu/base.nu *
use ~/dot/nu/niri.nu *
use ~/dot/nu/me.nu

def main [$url] {
    let $marks = (me bookmarks)
    let $key = ($marks | key-of $url) | default ""

    let $key = (gum input --placeholder $"Key for ($url)" --value $key)

    if ($key | is-not-empty) {
        $marks | upsert $key $url | me save-bookmarks
        notify-send "Bookmark saved"
    }
}
