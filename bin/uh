#!/usr/bin/env nu

use ~/dot/nu/all.nu *

# Uh...
def main [] {
    help main
}

# Spawn a file manager
def "main file-manager" [] {
    cli yazi
}

# Spawn a file manager
def "main file-manager-cwd" [] {
    cli yazi (wm cwd)
}

# Spawn a terminal
def "main term" [] {
    wm spawn kitty -d (wm cwd) --class term
}

# Toggle console
def "main console" [] {
    wm toggle console kitty --app-id console -- tmux new -A -s console
}

# Bookmark the URL inside of the clipboard, if there is one
def "main bookmark" [] {
    let $s = (wl-paste)
    if ($s | is-url) {
        tui bookmark $s
    }
}
