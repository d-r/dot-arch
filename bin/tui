#!/usr/bin/env nu

use ~/dot/nu/all.nu *

const $CONFIG = ("~/.config/kitty/tui.conf" | path expand)

# Present a TUI dialog box
def main [$cmd: string, ...$args] {
    let $cmd = $"tui.($cmd)"
    (
        kitten panel
        --layer=overlay
        --single-instance
        --instance-group=($cmd)
        --exclusive-zone=0
        --override-exclusive-zone
        --toggle-visibility=yes
        --hide-on-focus-loss=yes
        --lines=20
        --config=($CONFIG)
        --app-id=($cmd)
        --
        $cmd ...$args
    )
}
