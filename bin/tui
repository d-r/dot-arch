#!/usr/bin/env nu

use ~/dot/nu/all.nu *

def main [] {}

def "main save-url" [$url] {
    bm save $url
}

def "main urls" [] {
    bm open
}

def "main qb-urls" [] {
    bm qb-open
}

def "main lab" [] {
    cd ~/lab
    code (fd -td | fzf)
    # let $pro = me projects | pick name --no-headers
    # let $dir = $pro.dir | path expand
    # wm spawn $pro.editor $dir
}

def "main apps" [] {
    let $app = me apps | select desktop_file name | pick name --no-headers
    wm spawn dex $app.desktop_file
}
