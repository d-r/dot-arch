    name = "Daniel Rosengren"

[init]
    defaultBranch = "main"

[diff]
    # Show diff for changed submodule
	submodule = diff

[push]
    # Removes the need to do `git push â€” set-upstream origin <branch>` when the
    # branch does not yet exist upstream.
    autoSetupRemote = true

[alias]
    # Status
    st = "status --short"
    lg = "log --oneline --decorate"
    lf = "log --name-status"
    last = "log -1 HEAD --stat"

    # Changes
    ca = "commit --all --amend --no-edit"
    amend = "commit --amend"
    nm = "!git reset --hard HEAD && git clean --delete --force"
    undo = "reset --hard HEAD~"
    discard = "checkout --"
    unstage = "reset head --"
    untrack = "rm -r --cached"
    pf = "push --force"

    # Branches
    co = "checkout"
    nb = "checkout --branch"
    db = "branch --delete"
    drb = "push origin --delete"
    mb = "branch --force" # move
    rb = "branch --move" # rename

    # Lists
    lsb = "branch --all -vv"
    lst = "tag list"
    lsr = "remote -v"
    lss = "stash list"
